%div{class: "lesson #{cycle('line_odd', 'line_even')}" }
  %span.lesson_num
    = link_to "Lesson #{lesson.number}", lesson_category_path(@category, lesson.number)
  %span.translate_me
    &lt;#{link_to 'Translate Me Game', translate_me_category_path(@category, lesson.number)}&gt;
  %span.words
  - lesson.entities.each do |e|
    %span.word= e.word